<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="120dp"
        android:layout_alignParentTop="true"
        android:background="@drawable/injectionsetupname"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="60dp"
            android:layout_height="80dp"
            android:layout_marginTop="20dp"
            android:src="@drawable/freeiconmaker_0" />

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginTop="15dp"
            android:src="@drawable/injection_logo" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:gravity="center_horizontal"
            android:text="Touch MS InjectionSpot"
            android:textColor="@color/abc_primary_text_material_dark"
            android:textSize="40sp" />
    </LinearLayout>

    <GridLayout
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal"
        android:columnCount="4"
        android:orientation="vertical"
        android:rowCount="3" >

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="105dp"
            android:layout_height="105dp"
            android:layout_column="1"
            android:layout_gravity="center"
            android:layout_marginLeft="260dp"
            android:layout_marginTop="50dp"
            android:layout_row="1"
            android:layout_rowSpan="1"
            android:src="@drawable/clock" />

        <TextView
            android:id="@+id/tv_nextinjection"
            android:layout_column="2"
            android:layout_gravity="left|top"
            android:layout_marginTop="70dp"
            android:layout_row="1"
            android:text="Next Injection in:"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textSize="40sp" />

        <TextView
            android:id="@+id/tv_displaytime"
            android:layout_column="2"
            android:layout_gravity="left|center_vertical"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="115dp"
            android:layout_row="1"
            android:text="00:00:00"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textSize="60sp" />

        <Button
            android:id="@+id/bt_reportissue"
            android:layout_column="1"
            android:layout_gravity="center"
            android:layout_row="2"
            android:text="   Report Issue   " 
            android:layout_width="wrap_content"
             android:layout_height="60dp"
             android:textColor="#ffffff"
            android:textSize="30sp"
                        android:background="@drawable/buttonblue"
            />

        <Button
            android:id="@+id/bt_InjectionSite"
            android:layout_column="3"
            android:layout_gravity="center"
                        android:layout_width="wrap_content"
             android:layout_height="60dp"
            android:layout_row="2"
            android:text="   Injection Site   " 
            android:background="@drawable/buttonblue"
            android:textColor="#ffffff"
            android:textSize="30sp"/>

    </GridLayout>

</LinearLayout>