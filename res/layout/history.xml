<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    
     
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="120dp"
        android:layout_alignParentTop="true"
        android:background="@drawable/injectionsetupname"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="60dp"
            android:layout_height="80dp"
            android:layout_marginTop="20dp"
            android:src="@drawable/freeiconmaker_0" />

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginTop="15dp"
            android:src="@drawable/injection_logo" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:gravity="center_horizontal"
            android:text="Report Issue"
            android:textColor="@color/abc_primary_text_material_dark"
            android:textSize="40sp" />
    </LinearLayout>

    <GridLayout
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:columnCount="2"
        android:rowCount="8" >

        <Button
            android:id="@+id/bt_swelling_history"
            android:layout_width="140dp"
            android:layout_height="45dp"
            android:layout_column="0"
            android:layout_gravity="center"
            android:layout_marginLeft="70dp"
            android:layout_marginRight="70dp"
            android:layout_marginTop="20dp"
            android:layout_row="0"
            android:background="@drawable/buttonblue"
            android:text="Swelling"
            android:textColor="@color/abc_primary_text_material_dark"
            android:textSize="28sp" />

        <Button
            android:id="@+id/bt_redness_history"
            android:layout_width="140dp"
            android:layout_height="45dp"
            android:layout_column="0"
            android:layout_gravity="left|top"
            android:layout_marginLeft="70dp"
            android:layout_marginRight="70dp"
            android:layout_marginTop="10dp"
            android:layout_row="2"
            android:background="@drawable/buttonblue"
            android:text="Redness"
            android:textColor="@color/abc_primary_text_material_dark"
            android:textSize="30sp" />

        <Button
            android:id="@+id/bt_rash_history"
            android:layout_width="140dp"
            android:layout_height="45dp"
            android:layout_column="0"
            android:layout_gravity="left|top"
            android:layout_marginLeft="70dp"
            android:layout_marginRight="70dp"
            android:layout_marginTop="10dp"
            android:layout_row="3"
            android:background="@drawable/buttonblue"
            android:text="Rash"
            android:textColor="@color/abc_primary_text_material_dark"
            android:textSize="30sp" />

        <Button
            android:id="@+id/bt_bruising_history"
            android:layout_width="140dp"
            android:layout_height="45dp"
            android:layout_column="0"
            android:layout_gravity="left|top"
            android:layout_marginLeft="70dp"
            android:layout_marginRight="70dp"
            android:layout_marginTop="10dp"
            android:layout_row="5"
            android:background="@drawable/buttonblue"
            android:text="Bruising"
            android:textColor="@color/abc_primary_text_material_dark"
            android:textSize="30sp" />

        <Button
            android:id="@+id/bt_pain_history"
            android:layout_width="140dp"
            android:layout_height="45dp"
            android:layout_column="0"
            android:layout_gravity="left|top"
            android:layout_marginLeft="70dp"
            android:layout_marginRight="70dp"
            android:layout_marginTop="10dp"
            android:layout_row="6"
            android:background="@drawable/buttonblue"
            android:text="Pain"
            android:textColor="@color/abc_primary_text_material_dark"
            android:textSize="30sp" />

        <Button
            android:id="@+id/bt_other_history"
            android:layout_width="140dp"
            android:layout_height="45dp"
            android:layout_column="0"
            android:layout_gravity="left|top"
            android:layout_marginLeft="70dp"
            android:layout_marginRight="70dp"
            android:layout_marginTop="10dp"
            android:layout_row="7"
            android:background="@drawable/buttonblue"
            android:text="Other"
            android:textColor="@color/abc_primary_text_material_dark"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/textView1"
            android:layout_column="1"
            android:layout_gravity="left"
            android:layout_marginTop="20dp"
            android:layout_row="0"
            android:layout_rowSpan="8"
            android:text="REDNESS"
            android:textColor="@color/orange"
            android:textSize="35sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_height="5dp"
            android:layout_column="1"
            android:layout_gravity="left|top"
            android:layout_marginTop="20dp"
            android:layout_row="2"
            android:background="@drawable/orangeimageview"
            android:src="@drawable/orangeimageview" />

        <TextView
            android:id="@+id/textView2"
            android:layout_column="1"
            android:layout_gravity="left|center_vertical"
            android:layout_row="2"
            android:text="Where is this issue occurring?"
            android:layout_rowSpan="2" 
            android:layout_height="wrap_content"
            android:textSize="35sp"
            />

        <TextView
            android:id="@+id/tv_history"
            android:layout_height="40sp"
            android:layout_width="wrap_content"
            android:layout_column="1"
            android:layout_gravity="left|center_vertical"
            android:layout_row="5"
            android:ems="10" >

           
        </TextView>

    </GridLayout>
    
    

</LinearLayout>