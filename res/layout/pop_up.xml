<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="120dp"
        android:layout_alignParentTop="true"
        android:background="@drawable/injectionsetupname"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="60dp"
            android:layout_height="80dp"
            android:layout_marginTop="20dp"
            android:src="@drawable/freeiconmaker_0" />

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginTop="15dp"
            android:src="@drawable/injection_logo" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:gravity="center_horizontal"
            android:text="Inject Now"
            android:textColor="@color/abc_primary_text_material_dark"
            android:textSize="40sp" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.40" >

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/tv_position"
            android:layout_marginLeft="100dp"
            android:layout_toRightOf="@+id/tv_position"
            android:text="Tap “Injection
done!” after you
finished injecting to
complete the task."
            android:textSize="25sp" />

        <Button
            android:id="@+id/bt_injectiondone"
            android:layout_width="250dp"
            android:layout_height="70dp"
            android:layout_alignBaseline="@+id/button1"
            android:layout_alignBottom="@+id/button1"
            android:layout_alignLeft="@+id/textView1"
            android:background="@color/orange"
            android:gravity="center"
            android:text="Injection Done"
            android:textSize="25sp" />

        <Button
            android:id="@+id/button1"
            android:layout_width="250dp"
            android:layout_height="70dp"
            android:layout_alignLeft="@+id/tv_position"
            android:layout_below="@+id/tv_position"
            android:layout_marginTop="60dp"
            android:background="@drawable/buttonblue"
            android:text="Choose Another"
            android:textColor="@color/abc_primary_text_material_dark"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/tv_position"
            android:layout_width="250dp"
            android:layout_height="70dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="242dp"
            android:layout_marginTop="113dp"
            android:background="@color/orange"
            android:gravity="center"
            android:text="  null  "
            android:textSize="25sp" />
    </RelativeLayout>

</LinearLayout>