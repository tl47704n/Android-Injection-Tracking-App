<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    
    

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="120dp"
        android:layout_alignParentTop="true"
        android:background="@drawable/injectionsetupname"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="60dp"
            android:layout_height="80dp"
            android:layout_marginTop="20dp"
            android:src="@drawable/freeiconmaker_0" />

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginTop="15dp"
            android:src="@drawable/injection_logo" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:gravity="center_horizontal"
            android:text="Choose Position"
            android:textColor="@color/abc_primary_text_material_dark"
            android:textSize="40sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="vertical" 
        android:background="@drawable/greybackground">

        <TextView
            android:id="@+id/txt1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:text="MEDICATION - AVENOX"
            android:textColor="@color/abc_primary_text_material_dark"
            android:textSize="20sp" />
        
    </LinearLayout>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:background="@drawable/lightgreybackground"
        android:columnCount="4"
        android:orientation="vertical"
        android:rowCount="9" >

        <ImageButton
            android:id="@+id/ibt_thigh_left"
            android:layout_column="0"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:layout_gravity="left|top"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="60dp"
            android:layout_marginRight="60dp"
            android:layout_marginTop="5dp"
            android:layout_row="0"
            android:src="@drawable/thigh_left" />

        <TextView
            android:layout_gravity="center"
            android:layout_row="1"
            android:text="LEFT THIGH FRONT"
            android:textColor="@color/abc_primary_text_disable_only_material_dark" />

        <ImageButton
            android:id="@+id/ibt_thigh_right"
                        android:layout_width="130dp"
            android:layout_height="130dp"
            android:layout_column="1"
            android:layout_gravity="left|top"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="60dp"
            android:layout_marginRight="60dp"
            android:layout_marginTop="5dp"
            android:layout_row="0"
            android:src="@drawable/thigh_right" />

        <TextView
            android:layout_gravity="center"
            android:layout_row="1"
            android:text="RIGHT THIGH FRONT"
            android:textColor="@color/abc_primary_text_disable_only_material_dark" />

        <ImageButton
                        android:layout_width="130dp"
            android:layout_height="130dp"
            android:id="@+id/ibt_buttock_left"
            android:layout_column="2"
            android:layout_gravity="left|top"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="60dp"
            android:layout_marginRight="60dp"
            android:layout_marginTop="5dp"
            android:layout_row="0"
            android:src="@drawable/buttockleft" />

        <TextView
            android:layout_gravity="center"
            android:layout_row="1"
            android:text="LEFT BUTTOCK - UPPER OUTER"
            android:textColor="@color/abc_primary_text_disable_only_material_dark" />

        <ImageButton
                        android:layout_width="130dp"
            android:layout_height="130dp"
            android:id="@+id/ibt_buttock_right"
            android:layout_column="3"
            android:layout_gravity="left|top"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="60dp"
            android:layout_marginTop="5dp"
            android:layout_row="0"
            android:src="@drawable/buttock_right" />

        <TextView
            android:layout_gravity="center"
            android:layout_row="1"
            android:text="RIGHT BUTTOCK - UPPER OUTER"
            android:textColor="@color/abc_primary_text_disable_only_material_dark" />

        <ImageButton
                        android:layout_width="130dp"
            android:layout_height="130dp"
            android:id="@+id/ibt_arm_left"
            android:layout_column="0"
            android:layout_gravity="left|top"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="60dp"
            android:layout_marginRight="60dp"
            android:layout_marginTop="5dp"
            android:layout_row="3"
            android:src="@drawable/arm_left" />

        <TextView
            android:layout_column="0"
            android:layout_gravity="center"
            android:layout_row="4"
            android:text="LEFT ARM - UPPER OUTER"
            android:textColor="@color/abc_primary_text_disable_only_material_dark" />

        <ImageButton
                       android:layout_width="130dp"
            android:layout_height="130dp"
            android:id="@+id/ibt_arm_right"
            android:layout_column="1"
            android:layout_gravity="left|top"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="60dp"
            android:layout_marginRight="60dp"
            android:layout_marginTop="5dp"
            android:layout_row="3"
            android:src="@drawable/arm_right" />
		<ImageButton
                       android:layout_width="130dp"
            android:layout_height="130dp"
            android:id="@+id/ibt_abdomen"
            android:layout_column="2"
            android:layout_gravity="left|top"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="60dp"
            android:layout_marginRight="60dp"
            android:layout_marginTop="5dp"
            android:layout_row="3"
     		android:visibility="invisible"
     		 />
        <TextView
            android:layout_column="1"
            android:layout_gravity="center"
            android:layout_row="4"
            android:text="RIGHT ARM - UPPER OUTER"
            android:textColor="@color/abc_primary_text_disable_only_material_dark" />
        <TextView
            android:layout_column="2"
            android:layout_gravity="center"
            android:layout_row="4"
            android:text="ABDOMEN"
            android:textColor="@color/abc_primary_text_disable_only_material_dark"
            android:visibility="invisible"
            android:id="@+id/tv_Abdomen"
             />
        
    </GridLayout>
    
    
   
    
      

</LinearLayout>