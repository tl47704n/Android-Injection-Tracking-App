<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="120dp"
        android:layout_alignParentTop="true"
        android:background="@drawable/injectionsetupname"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="60dp"
            android:layout_height="80dp"
            android:layout_marginTop="20dp"
            android:src="@drawable/freeiconmaker_0" />

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginTop="15dp"
            android:src="@drawable/injection_logo" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:gravity="center_horizontal"
            android:text="Setup - TIMES"
            android:textColor="@color/abc_primary_text_material_dark"
            android:textSize="40sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:orientation="vertical"
        android:weightSum="100" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="10dp"
            android:gravity="center_horizontal"
            android:text="When do you have to perform your injections?"
            android:textColor="@color/black"
            android:textSize="40sp" />
    </LinearLayout>

    <GridLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="20dp"
        android:columnCount="8"
        android:orientation="horizontal"
        android:rowCount="4" >

        <Space />

        <Space />

        <Space />

        <Button
            android:id="@+id/btAddsetclock1"
            android:layout_width="70dp"
            android:layout_height="56dp"
            android:layout_column="6"
            android:layout_gravity="left|top"
            android:layout_row="0"
            android:text="+"
            android:textSize="35sp" />

        <Button
            android:id="@+id/btAddsetclock2"
            android:layout_width="70dp"
            android:layout_height="56dp"
            android:layout_column="6"
            android:layout_gravity="center_vertical"
            android:layout_row="1"
            android:text="+"
            android:textSize="35sp" />

        <TextView
            android:id="@+id/tv12to12"
            android:layout_width="154dp"
            android:layout_height="56dp"
            android:layout_column="5"
            android:layout_gravity="left|top"
            android:layout_row="0"
            android:gravity="center_vertical"
            android:text="12:00pm"
            android:textColor="@color/black"
            android:textSize="38sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv12to12_2"
            android:layout_width="154dp"
            android:layout_height="56dp"
            android:layout_column="5"
            android:layout_gravity="center_vertical"
            android:layout_row="1"
            android:gravity="center_vertical"
            android:text="12:00pm"
            android:textColor="@color/black"
            android:textSize="38sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btAddsetclock3"
            android:layout_width="70dp"
            android:layout_height="56dp"
            android:layout_column="6"
            android:layout_gravity="left|top"
            android:layout_row="2"
            android:text="+"
            android:textSize="35sp" />

        <Button
            android:id="@+id/btMinorsetclock1"
            android:layout_width="70dp"
            android:layout_height="56dp"
            android:layout_column="4"
            android:layout_gravity="center_horizontal|top"
            android:layout_marginLeft="40dp"
            android:layout_row="0"
            android:text="-"
            android:textSize="35sp" />

        <Button
            android:id="@+id/btMinorsetclock2"
            android:layout_width="70dp"
            android:layout_height="56dp"
            android:layout_column="4"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="40dp"
            android:layout_row="1"
            android:text="-"
            android:textSize="35sp" />

        <Button
            android:id="@+id/btAddsettime"
            android:layout_width="70dp"
            android:layout_height="56dp"
            android:layout_column="3"
            android:layout_gravity="center_horizontal|top"
            android:layout_row="0"
            android:text="+"
            android:textSize="35sp" />

        <TextView
            android:id="@+id/tvMontosun"
            android:layout_width="108dp"
            android:layout_height="56dp"
            android:layout_column="2"
            android:layout_gravity="left|top"
            android:layout_row="0"
            android:text="Mon"
            android:textColor="@color/black"
            android:textSize="49sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btMinorsettime"
            android:layout_width="70dp"
            android:layout_height="56dp"
            android:layout_column="1"
            android:layout_gravity="left|top"
            android:layout_row="0"
            android:text="-"
            android:textSize="35sp" />

        <Button
            android:id="@+id/btAddsettime2"
            android:layout_width="70dp"
            android:layout_height="56dp"
            android:layout_column="3"
            android:layout_gravity="center_vertical"
            android:layout_row="1"
            android:text="+"
            android:textSize="35sp" />

        <TextView
            android:id="@+id/tvMontosun2"
            android:layout_width="108dp"
            android:layout_height="56dp"
            android:layout_column="2"
            android:layout_gravity="center_vertical"
            android:layout_row="1"
            android:text="Wed"
            android:textColor="@color/black"
            android:textSize="49sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btMinorsettime2"
            android:layout_width="70dp"
            android:layout_height="56dp"
            android:layout_column="1"
            android:layout_gravity="center_vertical"
            android:layout_row="1"
            android:text="-"
            android:textSize="40sp" />

        <ImageButton
            android:id="@+id/bt_three_time_aweek"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_gravity="left|top"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="100dp"
            android:layout_row="1"
            android:src="@drawable/back" />

        <TextView
            android:id="@+id/tv12to12_3"
            android:layout_width="154dp"
            android:layout_height="56dp"
            android:layout_column="5"
            android:layout_gravity="left|top"
            android:layout_row="2"
            android:gravity="center_vertical"
            android:text="12:00pm"
            android:textColor="@color/black"
            android:textSize="38sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btMinorsetclock3"
            android:layout_width="70dp"
            android:layout_height="56dp"
            android:layout_column="4"
            android:layout_gravity="left|top"
            android:layout_marginLeft="40dp"
            android:layout_row="2"
            android:text="-"
            android:textSize="35sp" />

        <Button
            android:id="@+id/btAddsettime3"
            android:layout_width="70dp"
            android:layout_height="56dp"
            android:layout_column="3"
            android:layout_gravity="left|top"
            android:layout_row="2"
            android:text="+"
            android:textSize="35sp" />

        <TextView
            android:id="@+id/tvMontosun3"
            android:layout_width="98dp"
            android:layout_height="56dp"
            android:layout_column="2"
            android:layout_gravity="left|top"
            android:layout_row="2"
            android:gravity="center_horizontal"
            android:text="Fri"
            android:textColor="@color/black"
            android:textSize="49sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btMinorsettime3"
            android:layout_width="70dp"
            android:layout_height="56dp"
            android:layout_column="1"
            android:layout_gravity="left|top"
            android:layout_row="2"
            android:text="-"
            android:textSize="35sp" />

        <ImageButton
            android:id="@+id/btnext_countdown"
            android:layout_column="7"
            android:layout_gravity="right"
            android:layout_marginRight="20dp"
            android:layout_row="1"
            android:src="@drawable/next" />

    </GridLayout>

</LinearLayout>