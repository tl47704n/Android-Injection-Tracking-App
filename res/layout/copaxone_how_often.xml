<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="120dp"
        android:layout_alignParentTop="true"
        android:background="@drawable/injectionsetupname"
        android:orientation="horizontal" >

        <ImageView
            android:layout_marginTop="20dp"
            android:id="@+id/imageView2"
            android:layout_width="60dp"
            android:layout_height="80dp"
            android:src="@drawable/freeiconmaker_0" />

                <ImageView
                    android:layout_marginTop="15dp"
                    android:id="@+id/imageView1"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:src="@drawable/injection_logo" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_marginTop="40dp"
            android:text="Setup - COPAXONE"
            android:textColor="@color/abc_primary_text_material_dark"
            android:textSize="40sp" />

    </LinearLayout>
    
        <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="100dp"
        android:orientation="vertical" 
        android:weightSum="100"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
         	android:layout_marginTop="30dp"
         	android:layout_marginLeft="40dp"
         	android:gravity="center_horizontal"
            android:text="How often do you need to inject Copaxone?"
            android:textColor="@color/black"
            android:textSize="40sp" />
   
    </LinearLayout>
        <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:columnCount="3"
        android:rowCount="4" >

        <ImageButton
            android:id="@+id/btBackCop"
            android:layout_column="2"
            android:layout_gravity="left|top"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="15dp"
            android:layout_row="1"
            android:src="@drawable/back" />

        <Button
            android:id="@+id/btDaily"
            android:layout_width="338dp"
            android:layout_height="83dp"
            android:layout_column="2"
            android:layout_gravity="center"
            android:layout_marginRight="160dp"
            android:layout_row="1"
            android:text="Daily"
            android:textSize="50sp" />

        <ImageButton
            android:id="@+id/btNextCop"
            android:layout_column="2"
            android:layout_gravity="right|top"
            android:layout_marginRight="20dp"
            android:layout_marginTop="15dp"
            android:layout_row="1"
            android:src="@drawable/next" />

        <Button
            android:id="@+id/btThree_times_per_week_cop"
            android:layout_width="wrap_content"
            android:layout_height="83dp"
            android:layout_column="2"
            android:layout_gravity="center_horizontal|top"
            android:layout_row="2"
            android:text="Three times per week"
            android:textSize="50sp" />

         </GridLayout>

</LinearLayout>
